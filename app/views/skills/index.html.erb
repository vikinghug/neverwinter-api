<p id="notice"><%= notice %></p>

<h1>Listing Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Klass</th>
      <th>Paragon</th>
      <th>Skill type</th>
      <th>Points</th>
      <th>Row</th>
      <th>Slot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.klass %></td>
        <td><%= skill.paragon %></td>
        <td><%= skill.skill_type %></td>
        <td><%= skill.points %></td>
        <td><%= skill.row %></td>
        <td><%= skill.slot %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

